<?xml version="1.0" encoding="utf-8"?><!--No need to use more complicated layouts than LinearLayout for this screen-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/pure_gold"
    tools:context=".fragments.splash.SplashFragment">

    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/my_logo"
        android:padding="@dimen/logo_padding"
        android:src="@drawable/rotate_animation" />
</LinearLayout>